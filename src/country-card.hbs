<div class="card">
    <h1 class="title">{{name}}</h1>
    <div class="wrapper">
        <div class="card-body">

            <p>Capital: <span class="country-info">{{capital}}</span></p>
            <p>Population: <span class="country-info">{{population}}</span></p>
            <p>Languages:</p>
            <ul>
                {{#each languages}}
                <li class="country-item">{{this.name}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="card-img">
            <img src="{{flag}}" alt="{{name}}-flag" width="640" height="480">
        </div>
    </div>
</div>